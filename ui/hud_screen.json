    "orientation": "vertical",
    "anchor_to": "bottom_left",
    "anchor_from": "bottom_left",
    "controls": [
      {"compass_view@hud.compass_view":{}},
      {"recovery_compass_view@hud.recovery_compass_view":{}},
      {"clock_view@hud.clock_view":{}}
    ]
  },

