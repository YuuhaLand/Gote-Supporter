{
  "namespace": "gote_info",

  "goteinfo_button_default": {
    "type": "image",
    "size": [ "100%", "100%" ],
    "texture": "textures/ui/goteinfo_button_default",
    "$nothover|default": true,
    "controls": [
      {
        "sel": {
          "type": "image",
          "size": [ 5, 9 ],
          "offset": [ 3, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 2,
          "texture": "textures/ui/goteinfo_button_sel",
          "ignored": "$nothover"
        }
      },
      {
        "label": {
          "type": "label",
          "size": [ "default", 10 ],
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "text": "$button_text",
          "color": [ 1, 1, 1 ],
          "layer": 2
        }
      }
    ]
  },

  "goteinfo_button_hover@gote_info.goteinfo_button_default": {
    "texture": "textures/ui/goteinfo_button_hover",
    "$nothover": false
  },

  "goteinfo_close_button_default": {
    "type": "image",
    "size": [ 19, 19 ],
    "texture": "textures/ui/goteinfo_close_button_default"
  },

  "goteinfo_close_button_hover@gote_info.goteinfo_close_button_default": {
    "texture": "textures/ui/goteinfo_close_button_hover"
  },
  
  "anim_gote_info_index1": {
    "anim_type": "wait",
    "duration": 0.5,
    "next": "@gote_info.anim_gote_info_index2"
  },

  "anim_gote_info_index2": {
    "anim_type": "wait",
    "duration": "$anim_delay",
    "next": "@gote_info.anim_gote_info_index3"
  },

  "anim_gote_info_index3": {
    "anim_type": "offset",
    "easing": "out_quart",
    "duration": 1,
    "from": [ "-100% - 20px", 0 ],
    "to": [ 0, 0 ]
  },

  "gote_info_index_toggle": {
    "type": "panel",
    "$button_text|default": "",
    "$toggle_view_binding_name|default": "toggle",
    "$anim_delay|default": 0,
    "controls": [
      {
        "$toggle_view_binding_name@common.toggle": {
          "size": [ "100%", "100%" ],
          "offset": [ "-100% - 20px", 0 ],
          "anims": [ "@gote_info.anim_gote_info_index1" ],
          "$radio_toggle_group": true,
          "$toggle_name": "indexs_toggle",
          "$focus_override_left": "FOCUS_OVERRIDE_STOP",
          "$unchecked_control": "gote_info.goteinfo_button_default",
          "$checked_control": "gote_info.goteinfo_button_default",
          "$unchecked_hover_control": "gote_info.goteinfo_button_hover",
          "$checked_hover_control": "gote_info.goteinfo_button_hover",
          "$unchecked_locked_control": "gote_info.goteinfo_button_default",
          "$checked_locked_control": "gote_info.goteinfo_button_default",
          "$unchecked_locked_hover_control": "gote_info.goteinfo_button_hover",
          "$checked_locked_hover_control": "gote_info.goteinfo_button_hover"
        }
      }
    ]
  },

  "gote_info_close_toggle@common.toggle": {
    "size": [ 19, 19 ],
    "focus_enabled": false,
    "$toggle_name": "indexs_toggle",
    "$radio_toggle_group": true,
    "$toggle_group_forced_index": 0,
    "$return_sound": true,
    "$unchecked_control": "gote_info.goteinfo_close_button_default",
    "$checked_control": "gote_info.goteinfo_close_button_default",
    "$unchecked_hover_control": "gote_info.goteinfo_close_button_hover",
    "$checked_hover_control": "gote_info.goteinfo_close_button_hover",
    "$unchecked_locked_control": "gote_info.goteinfo_close_button_default",
    "$checked_locked_control": "gote_info.goteinfo_close_button_default",
    "$unchecked_locked_hover_control": "gote_info.goteinfo_close_button_hover",
    "$checked_locked_hover_control": "gote_info.goteinfo_close_button_hover",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_select",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "mapping_type": "pressed"
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  "anim_gote_info_mainpanel": {
    "anim_type": "offset",
    "easing": "out_quart",
    "duration": 0.7,
    "from": [ "100% + 20px", 0 ],
    "to": [ 0, 0 ]
  },

  "content_back": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "back": {
          "type": "image",
          "size": [ "100%", "100%" ],
          "offset": [ "100% + 20px", 0 ],
          "anims": [ "@gote_info.anim_gote_info_mainpanel" ],
          "texture": "textures/ui/goteinfo_panel",
          "controls": [
            {
              "header": {
                "type": "panel",
                "size": [ "100% - 8px", 20 ],
                "offset": [ 0, 4 ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "layer": 3,
                "controls": [
                  {
                    "header_text": {
                      "type": "label",
                      "text": "$header_text"
                    }
                  },
                  {
                    "divider": {
                      "type": "image",
                      "texture": "textures/ui/White",
                      "size": [ "100%", 1 ],
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "color": [ 1, 1, 1 ],
                      "alpha": 0.8
                    }
                  }
                ]
              }
            },
            {
              "main_content@common.scrolling_panel": {
                "$show_background": false,
                "size": [ "100% - 8px", "100% - 30px"],
                "offset": [ 0, -4 ],
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "layer": 3,
                
                "$scrolling_content": "$section_panel",
                "$scroll_size": [ "4px", "100% - 2px" ],
                "$scrolling_panel_size": [ "100% - 2px", "100%" ],
                "$always_handle_scrolling": false
              }
            }
          ]
        }
      }
    ]
  },

  "content": {
    "type": "collection_panel",
    "size": [ "100%", "100%" ],
    "$header_text|default": "",
    "$source_toggle|default": "welcome_toggle",
    "$section_panel|default": "gote_info_sections.welcome_section",

    "factory":{
      "name": "cont",
      "control_name": "gote_info.content_back"
    },
    
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "$source_toggle",
        "source_property_name": "(#toggle_state * 1)",
        "target_property_name": "#collection_length"
      }
    ]
  },

  "main_contents": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "welcome@gote_info.content": {
          "$header_text": "packinfo.about.title",
          "$source_toggle": "welcome_toggle",
          "$section_panel": "gote_info_sections.welcome_section"
        }
      },
      {
        "features@gote_info.content": {
          "$header_text": "packinfo.features.title",
          "$source_toggle": "features_toggle",
          "$section_panel": "gote_info_sections.features_section"
        }
      },
      {
        "update@gote_info.content": {
          "$header_text": "packinfo.update.title",
          "$source_toggle": "update_toggle",
          "$section_panel": "gote_info_sections.update_section"
        }
      },
      {
        "author@gote_info.content": {
          "$header_text": "packinfo.about_author.title",
          "$source_toggle": "author_toggle",
          "$section_panel": "gote_info_sections.author_section"
        }
      },
      {
        "faq@gote_info.content": {
          "$header_text": "packinfo.faq.title",
          "$source_toggle": "faq_toggle",
          "$section_panel": "gote_info_sections.faq_section"
        }
      },
      {
        "caution@gote_info.content": {
          "$header_text": "packinfo.caution.title",
          "$source_toggle": "notes_toggle",
          "$section_panel": "gote_info_sections.caution_section"
        }
      }
    ]
  },
  
  
  "main_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "title_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%c", 30 ],
          "offset": [ 0, 8 ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "controls": [
            {
              "icon": {
                "type": "image",
                "size": [ 30, 30 ],
                "texture": "textures/ui/gote_support_icon"
              }
            },
            {
              "padding": {
                "type": "panel",
                "size": [ 5, 0 ]
              }
            },
            {
              "text_panel": {
                "type": "panel",
                "size": [ "100%c", 30 ],
                "controls": [
                  {
                    "label": {
                      "type": "label",
                      "text": "§aGote-Supporter\n§bby YuuhaLand",
                      "text_alignment": "center",
                      "shadow": true,
                      "font_type": "#font_type",
                      "bindings": [
                        {
                          "binding_type": "view",
                          "resolve_sibling_scope": true,
                          "source_control_name": "font_property_panel",
                          "source_property_name": "#font_type",
                          "target_property_name": "#font_type"
                        }
                      ]
                    }
                  },
                  {
                    "font_property_panel": {
                      "type": "panel",
                      "size": [ 0, 0 ],
                      "property_bag": {
                        "#font_type": "classic"
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "indexs_panel": {
          "type": "stack_panel",
          "size": [ 130, "100%c" ],
          "offset": [ 5, -20 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "controls": [
            {
              "welcome@gote_info.gote_info_index_toggle": {
                "size": [ 130, 16 ],
                "$anim_delay": 0,
                "$toggle_group_forced_index": 1,
                "$toggle_view_binding_name": "welcome_toggle",
                "$button_text": "packinfo.about.title",
                "$focus_id": "welcome",
                "$focus_override_up": "notes"
              }
            },
            {
              "padding_01": {
                "type": "panel",
                "size": [ 0, 8 ]
              }
            },
            {
              "features@gote_info.gote_info_index_toggle": {
                "size": [ 130, 16 ],
                "$anim_delay": 0.05,
                "$toggle_group_forced_index": 2,
                "$toggle_view_binding_name": "features_toggle",
                "$button_text": "packinfo.features.title"
              }
            },
            {
              "padding_02": {
                "type": "panel",
                "size": [ 0, 8 ]
              }
            },
            {
              "update@gote_info.gote_info_index_toggle": {
                "size": [ 130, 16 ],
                "$anim_delay": 0.1,
                "$toggle_group_forced_index": 3,
                "$toggle_view_binding_name": "update_toggle",
                "$button_text": "packinfo.update.title"
              }
            },
            {
              "padding_03": {
                "type": "panel",
                "size": [ 0, 8 ]
              }
            },
            {
              "author@gote_info.gote_info_index_toggle": {
                "size": [ 130, 16 ],
                "$anim_delay": 0.15,
                "$toggle_group_forced_index": 4,
                "$toggle_view_binding_name": "author_toggle",
                "$button_text": "packinfo.about_author.title"
              }
            },
            {
              "padding_04": {
                "type": "panel",
                "size": [ 0, 8 ]
              }
            },
            {
              "faq@gote_info.gote_info_index_toggle": {
                "size": [ 130, 16 ],
                "$anim_delay": 0.2,
                "$toggle_group_forced_index": 5,
                "$toggle_view_binding_name": "faq_toggle",
                "$button_text": "packinfo.faq.title"
              }
            },
            {
              "padding_05": {
                "type": "panel",
                "size": [ 0, 8 ]
              }
            },
            {
              "notes@gote_info.gote_info_index_toggle": {
                "size": [ 130, 16 ],
                "$anim_delay": 0.25,
                "$toggle_group_forced_index": 6,
                "$toggle_view_binding_name": "notes_toggle",
                "$button_text": "packinfo.caution.title",
                "$focus_id": "notes",
                "$focus_override_down": "welcome"
              }
            }
          ]
        }
      },
      {
        "contents_panel": {
          "type": "panel",
          "size": [ "100% - 150px", "100% - 50px" ],
          "offset": [ -5, -5 ],
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "controls": [
            {
              "contents@gote_info.main_contents": {}
            },
            {
              "close@gote_info.gote_info_close_toggle": {
                "offset": [ 0, -21 ],
                "anchor_from": "top_right",
                "anchor_to": "top_right"
              }
            }
          ]
        }
      }
    ]
  },


  "root_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "root_panel@common.fullscreen_header": {
          "$back_button_has_title": true,
          "$button_text": "('§l§1Gote-Supporter §4v' + $gote_ver)",
          "$child_control": "gote_info.main_panel",
          "layer": 10
        }
      }
    ]
  },

  "black": {
    "type": "image",
    "size": [ "100%", "100%" ],
    "texture": "textures/ui/yume_dream",
    "fill": true
  }
}