{
  "namespace": "gote_info_sections",

  "header": {
    "type": "input_panel",
    "size": [ "100%", 0 ],
    "focus_enabled": true,
    "hover_enabled": true
  },

  "version_toggle_button_content": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "labels": {
          "type": "stack_panel",
          "size": [ "100%", 10 ],
          "offset": [ 2, 0 ],
          "orientation": "horizontal",
          "controls": [
            {
              "gotesupporter": {
                "type": "label",
                "text": "('Gote-Supporter ' + $version)",
                "color": "$text_color",
                "font_type": "#font_type",
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "font_property_panel",
                    "source_property_name": "#font_type",
                    "target_property_name": "#font_type"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "dropdown_chevron": {
          "type": "image",
          "texture": "textures/ui/chevron_white_down",
          "color": "$text_color",
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -5, 0 ],
          "size": [ 11, 11 ]
        }
      }
    ]
  },

  "faq_toggle_button_content": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "labels": {
          "type": "stack_panel",
          "size": [ "100%", 10 ],
          "offset": [ 2, 0 ],
          "orientation": "horizontal",
          "controls": [
            {
              "title": {
                "type": "label",
                "text": "('§　%' +$question + '.q')",
                "color": "$text_color",
                "font_type": "#font_type",
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "font_property_panel",
                    "source_property_name": "#font_type",
                    "target_property_name": "#font_type"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "dropdown_chevron": {
          "type": "image",
          "texture": "textures/ui/chevron_white_down",
          "color": "$text_color",
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -5, 0 ],
          "size": [ 11, 11 ]
        }
      }
    ]
  },

  "version_section": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "$version|default": "v1.0.0",
    "$details_controls|default": [],
    "controls": [
      {
        "toggle_button@common_toggles.dark_content_toggle": {
          "size": [ "100%", 20 ],
          "$button_content": "gote_info_sections.version_toggle_button_content",
          "$toggle_name": "$version",
          "$toggle_view_binding_name": "$version",
          "$toggle_sound": true
        }
      },
      {
        "details_panel": {
          "type": "image",
          "size": [ "100%", "100%c + 5px" ],
          "texture": "textures/ui/menubackground",
          "controls": [
            {
              "stack": {
                "type": "stack_panel",
                "size": [ "100% - 4px", "100%c" ],
                "layer": 10,
                "controls": "$details_controls"
              }
            }
          ],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "$version",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "padding_2": {
          "type": "panel",
          "size": [ 0, 3 ]
        }
      }
    ]
  },

  "faq_text": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "$question|default": "",
    "controls": [
      {
        "toggle_button@common_toggles.dark_content_toggle": {
          "size": [ "100%", 20 ],
          "$button_content": "gote_info_sections.faq_toggle_button_content",
          "$toggle_name": "$question",
          "$toggle_view_binding_name": "$question",
          "$toggle_sound": true
        }
      },
      {
        "details_panel": {
          "type": "image",
          "size": [ "100%", "100%c + 5px" ],
          "texture": "textures/ui/menubackground",
          "controls": [
            {
              "stack": {
                "type": "stack_panel",
                "size": [ "100% - 4px", "100%c" ],
                "layer": 10,
                "controls": [
                  {
                    "anser@gote_info_sections.text": { "$text": "($question + '.a')" }
                  }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "$question",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "padding_2": {
          "type": "panel",
          "size": [ 0, 3 ]
        }
      }
    ]
  },

  "text": {
    "type": "label",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "size": [ "100%", "default" ],
    "shadow": true,
    "text": "$text",
    "$text|default": ""
  },

  "link_text@gote_info_sections.text": {
    "size": [ "default", "default" ],
    "max_size": [ "100%", 10000 ],
    "font_type": "smooth",
    "color": "$2_color_format",
    "controls": [
      {
        "kasen": {
          "type": "image",
          "texture": "textures/ui/White",
          "color": "$2_color_format",
          "size": [ "100%", 1 ],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle"
        }
      }
    ]
  },

