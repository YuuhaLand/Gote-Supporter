                      "bindings": [
                        {
                          "binding_name": "#comment_content",
                          "binding_type": "collection",
                          "binding_collection_name": "comment_collection"
                        }
                      ]
                    }
                  },
                  {
                    "honbun": {
                      "type": "label",
                      "text": "#comment_content",
                      "color": "$f_color_format",
